fun indexOfSubstring(hilera, subhilera) {
    let i = 0;

    while (i <= len(hilera) - len(subhilera)) {
        let j = 0;
        let match = true;

        while (j < len(subhilera) && match) {
            if (hilera[i + j] != subhilera[j]) {
                match = false;
            }
            j = j + 1;
        }

        if (match) {
            return i;
        }

        i = i + 1;
    }

    return -1;  // Retorna -1 si no se encuentra la subhilera
}

let hilera = "Hola, Mundo!";
let subhilera = "Mundo";

print("Buscando el índice de la subhilera en la hilera de manera iterativa:");
let indice = indexOfSubstring(hilera, subhilera);
print("El índice de la subhilera es: " + indice);
