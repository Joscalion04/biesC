fun reverseIterative(hilera) {
    let reversed = "";
    let i = len(hilera) - 1;

    while (i >= 0) {
        reversed = reversed + hilera[i];
        i = i - 1;
    }

    return reversed;
}

let hilera = "Hola, Mundo!";
print("Invertir una hilera de manera iterativa:");
let hileraInvertida = reverseIterative(hilera);
print("La hilera invertida es: " + hileraInvertida);
