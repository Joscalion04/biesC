fun fibonacciRecursive(n) {
    if (n == 0) {
        return 0;  // Caso base: Fibonacci(0) = 0
    }
    if (n == 1) {
        return 1;  // Caso base: Fibonacci(1) = 1
    }

    return fibonacciRecursive(n - 1) + fibonacciRecursive(n - 2);  // Llamadas recursivas
}

let numero = 7;
print("Calculando el n-ésimo número de Fibonacci de manera recursiva:");
let resultado = fibonacciRecursive(numero);
print("El Fibonacci de " + numero + " es: " + resultado);
